generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String                @id @default(uuid())
  email               String                @unique
  passwordHash        String
  fullName            String
  profilePhoto        String?
  // Professional Identity
  linkedInUrl         String?
  phone               String?
  // Basic Information / Personal
  city                String?
  state               String?
  country             String                @default("India")
  postalCode          String?
  studentStatus       StudentStatus?
  dateOfBirth         DateTime?
  about               String?               // bio
  gender              String?
  nationality         String?
  // Links
  personalWebsite     String?
  githubUrl           String?
  portfolioUrl        String?
  twitterUrl          String?
  facebookUrl         String?
  instagramUrl        String?
  // Simple tag list for resume UI
  languages           String?               @default("[]") // JSON string array
  // Location & Work Authorization
  workAuthCountry     String?
  locationSameAsPhysical Boolean?
  legalWorkAuthorized Boolean?
  legalNotifyRelocation Boolean?
  workAuthVerifiedAt  DateTime?
  // Availability
  weeklyAvailability  WeeklyAvailability?
  preferredWorkWindow PreferredWorkWindow?
  availabilityToStart String?
  preferredHoursPerWeek Int?
  timezone            String?
  workingHours        String?               // JSON array
  dateSpecificExceptions String?            // JSON
  // Work preferences
  domainExpertises    String                @default("[]") // Stored as JSON string array
  minFullTimeCompensationYear Int?
  minPartTimeCompensationHour Int?
  // Communications
  notifyEmail         Boolean?
  notifySms           Boolean?
  notifyFullTime      Boolean?
  notifyPartTime      Boolean?
  notifyReferral      Boolean?
  notifyJobOpportunities Boolean?
  notifyWorkUpdates   Boolean?
  unsubscribeAll      Boolean?
  // Account / Media
  resumeUrl           String?
  generativeProfileEnabled Boolean?
  referredBy          String?
  // Compliance
  agreedToTerms       Boolean               @default(false)
  // Relations
  educations          Education[]
  workExperiences     WorkExperience[]
  projects            Project[]
  certifications      Certification[]
  aiExperiences       AiExperience[]
  languageProficiencies LanguageProficiency[]
  stepCompletions     UserStepCompletion[]
  opportunityApplications OpportunityApplication[]
  
  createdAt           DateTime              @default(now())
  updatedAt           DateTime              @updatedAt
}

model Education {
  id              String   @id @default(uuid())
  institutionName String
  degree          String
  fieldOfStudy    String   @default("")
  startMonth      Int?
  startYear       Int
  endMonth        Int?
  endYear         Int?     // null means 'Currently Studying'
  description     String?
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model WorkExperience {
  id               String         @id @default(uuid())
  jobTitle         String
  organizationName String
  employmentType   EmploymentType
  startMonth       Int
  startYear        Int
  endMonth         Int?
  endYear          Int?           // null means 'Currently Working'
  description      String?
  userId           String
  user             User           @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AiExperience {
  id               String         @id @default(uuid())
  hasExperience    Boolean        @default(false)
  platformName     String?
  taskTypes        String         @default("[]") // Stored as JSON string array of AiTaskType
  durationMonths   Int?
  toolsUsed        String?
  userId           String
  user             User           @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model LanguageProficiency {
  id           String       @id @default(uuid())
  languageName String
  readingLevel ReadingLevel
  writingLevel WritingLevel
  userId       String
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Project {
  id            String   @id @default(uuid())
  projectName   String
  projectLink   String?
  description   String?
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Certification {
  id                    String    @id @default(uuid())
  certificationName     String
  issuingOrganization   String?
  issueDate             DateTime?
  credentialId          String?
  credentialUrl         String?
  userId                String
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Opportunities and application tasks
model ApplicationStep {
  id          String              @id @default(uuid())
  type        ApplicationStepType
  name        String
  isCore      Boolean             @default(false)
  sortOrder   Int                 @default(0)
  opportunities OpportunityStep[]
  userCompletions UserStepCompletion[]
}

model Opportunity {
  id             String    @id @default(uuid())
  title          String
  payMin         Int       // hourly dollars
  payMax         Int
  bounty         Int       // referral/project bonus
  employmentType OpportunityEmploymentType
  isRemote       Boolean   @default(true)
  postedBy       String    @default("2une")
  hiredThisMonth Int?      // optional count
  // Task/role detail fields
  jobDescription        String?  // rich text or markdown
  keyResponsibilities   String?  // JSON array of strings
  minimumQualifications String?  // JSON array of strings
  locationRequirements  String?  // JSON array e.g. ["CAN","USA"]
  projectTimeline       String?  // e.g. "Start: Immediate, Duration: 1-2 months"
  applicationProcess    String?  // JSON array or text description
  contactPaymentTerms   String?  // payment, contract terms
  aboutCompany          String?  // about the company
  createdAt             DateTime @default(now())
  steps                 OpportunityStep[]
  applications          OpportunityApplication[]
}

model OpportunityStep {
  opportunityId     String
  applicationStepId String
  opportunity     Opportunity     @relation(fields: [opportunityId], references: [id], onDelete: Cascade)
  applicationStep ApplicationStep @relation(fields: [applicationStepId], references: [id], onDelete: Cascade)
  @@id([opportunityId, applicationStepId])
}

model UserStepCompletion {
  id                 String               @id @default(uuid())
  userId             String
  applicationStepId String
  status             StepCompletionStatus @default(PENDING)
  completedAt        DateTime?
  metadata           String?              // JSON for file URLs, etc.
  user               User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  applicationStep    ApplicationStep     @relation(fields: [applicationStepId], references: [id], onDelete: Cascade)
  @@unique([userId, applicationStepId])
}

model OpportunityApplication {
  id             String            @id @default(uuid())
  userId         String
  opportunityId  String
  status         ApplicationStatus @default(DRAFT)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  user           User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  opportunity    Opportunity       @relation(fields: [opportunityId], references: [id], onDelete: Cascade)
  @@unique([userId, opportunityId])
}

enum ApplicationStepType {
  RESUME
  PERSONAL_INTRODUCTION
  WORK_AUTHORIZATION
}

enum StepCompletionStatus {
  PENDING
  UPLOADED
  COMPLETED
}

enum ApplicationStatus {
  DRAFT
  SUBMITTED
}

enum OpportunityEmploymentType {
  FULL_TIME
  PART_TIME
  CONTRACT
  PROJECT_BASED
}

enum StudentStatus {
  STUDENT
  WORKING_PROFESSIONAL
  FREELANCER
  OTHER
}

enum EmploymentType {
  FULL_TIME
  PART_TIME
  INTERNSHIP
  FREELANCE
  CONTRACT
}

enum ReadingLevel {
  BASIC
  INTERMEDIATE
  ADVANCED
  NATIVE_FLUENT
}

enum WritingLevel {
  BASIC
  INTERMEDIATE
  ADVANCED
  NATIVE_FLUENT
}

enum WeeklyAvailability {
  HOURS_3_TO_5
  HOURS_5_TO_10
  HOURS_10_PLUS
}

enum PreferredWorkWindow {
  WEEKDAYS
  WEEKENDS
  FLEXIBLE
}
